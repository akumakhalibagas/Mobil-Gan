extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Product
			small menu for editing product data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Lainnya  
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit Product
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/products/edit/#{(id==undefined) ? data.id : id}' enctype='multipart/form-data')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-check
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama Jenis Mobil
									input(type='text',value="#{ (nama_jenis_mobil == undefined)? data.nama_jenis_mobil : nama_jenis_mobil}",name='nama_jenis_mobil',placeholder='Masukkan Nama Jenis Mobil', autofocus).form-control
								.form-group
									label
										| Plat Nomor
									input(type='text',value="#{ (plat_nomor == undefined) ? data.plat_nomor : plat_nomor }",name='plat_nomor',placeholder='Masukkan Plat Nomor').form-control
								.form-group
									label
										| Gambar
									input(type='file',name='gambar').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/products').btn.btn-danger.pull-right
									| Back