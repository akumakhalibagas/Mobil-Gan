doctype html
html
	head
		title
			| #{title}
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
		link(rel='stylesheet', href='/adminlte/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/font-awesome/css/font-awesome.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css')
		link(rel='stylesheet', href='/adminlte/dist/css/AdminLTE.min.css')
		link(rel='stylesheet', href='/adminlte/plugins/iCheck/square/blue.css')

	body.hold-transition.login-page(style="background: url('adminlte/dist/img/background.png'); background-attachment:fixed;")
		.row.col-md-12
			.form.col-md-6(style="margin-left: 26%; margin-right: 26%; margin-top: 1%; ")
				.login-logo
					
				.login-box-body(style="background-color: #ffffff40; backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px);")
					p.login-box-msg(style="margin-bottom: 15px; margin-top: 45px;")
						img(src="/images/car.png", alt="user image" style="width: 52%")
						br
						b(style="font-size: 35px;")
							| Rental Mobil
					form(action="/login/",method="post" style="padding-left: 50px; padding-right: 50px; margin-bottom: 10px;")
						- if (messages.msg_error) 
							.alert.alert-danger.alert-dismissable 
								button.close(type='button', data-dismiss='alert', aria-hidden='true') 
									| ×
								h4
									i.icon.fa.fa-ban
									| Alert! 
								| !{messages.msg_error}
						- if (messages.msg_info) 
							.alert.alert-success.alert-dismissable 
								button.close(type='button', data-dismiss='alert', aria-hidden='true') 
									| ×
								h4
									i.icon.fa.fa-ban
									| Alert! 
								| !{messages.msg_info}
						.form-group.has-feedback
							input(type="email",placeholder="Email",name="txtEmail" style="border-radius: 8px;").form-control
							span.glyphicon.glyphicon-envelope.form-control-feedback
						.form-group.has-feedback
							input(type="password",placeholder="Password",name="txtPassword",style="border-radius: 8px;").form-control
							span.glyphicon.glyphicon-lock.form-control-feedback
						.row
							.col-xs-4
								.checkbox
									label
										input(type="checkbox")
										|  Remember Me
							.col-xs-4
								a(href=("/register") style="border-radius: 5px;").btn.btn-primary.btn-block.btn-flat
									| Register
							.col-xs-4
								button(type="submit" style="border-radius: 5px;").btn.btn-primary.btn-block.btn-flat
									| Login

script(type='text/javascript', src='/adminlte/plugins/jQuery/jquery-2.2.3.min.js')
script(type='text/javascript', src='/adminlte/bootstrap/js/bootstrap.min.js')
script(type='text/javascript', src='/adminlte/plugins/iCheck/icheck.min.js')
script(type='text/javascript', src='/adminlte/dist/js/login.js')