extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Data User Perental
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Rentals
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| User Perental
									input(type='text',value='#{user_perental}',name='user_perental',placeholder='Enter User Perental', autofocus).form-control
								.form-group
									label
										| No Handphone
									input(type='text',name='no_hp',placeholder='Enter No Handphone').form-control
								.form-group
									label
										| NIK
									input(type='text',name='nik',placeholder='Enter NIK').form-control
								.form-group
									label
										| Jenis
									input(type='text',name='jenis',placeholder='Enter Jenis').form-control
								.form-group
									label
										| Status
									input(type='text',name='status',placeholder='Enter Status').form-control
								.form-group
									label
										| Tanggal
									input(type='date',name='tanggal',placeholder='Enter Tanggal').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/customers').btn.btn-danger.pull-right
									| Back